<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ingredient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1a1a1a"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/ingredient_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#b0b0b0"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:visibility="visible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Add"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/quantity_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/ingredient_minus_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Decrease"
            android:src="@android:drawable/ic_input_delete"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:tint="#e74c3c" />

        <TextView
            android:id="@+id/ingredient_quantity"
            android:layout_width="44dp"
            android:layout_height="36dp"
            android:text="0"
            android:gravity="center"
            android:textColor="#1a1a1a"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/ingredient_plus_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Increase"
            android:src="@android:drawable/ic_input_add"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:tint="#27ae60" />

    </LinearLayout>

</LinearLayout>
