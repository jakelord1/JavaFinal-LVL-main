<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/recipe_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingTop="24dp">

                <ImageView
                    android:id="@+id/recipe_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/recipe_image" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="32dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_back"
                    app:iconTint="#2a2a2a"
                    app:iconSize="20dp"
                    android:backgroundTint="#ffffff"
                    style="@style/Widget.Material3.Button.IconButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/favorite_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="56dp"
                    android:layout_marginTop="32dp"
                    android:padding="0dp"
                    app:icon="@android:drawable/btn_star_big_off"
                    app:iconTint="#7c4dff"
                    app:iconSize="20dp"
                    android:backgroundTint="#ffffff"
                    style="@style/Widget.Material3.Button.IconButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/share_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="14dp"
                    android:layout_marginTop="32dp"
                    android:padding="0dp"
                    app:icon="@android:drawable/ic_menu_share"
                    app:iconTint="#2a2a2a"
                    app:iconSize="20dp"
                    android:backgroundTint="#ffffff"
                    style="@style/Widget.Material3.Button.IconButton" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/recipe_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recipe"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1a1a1a" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="30 min"
                    android:textSize="14sp"
                    android:textColor="#6f6f6f" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#ececec" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ingredients"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1a1a1a" />

                <TextView
                    android:id="@+id/ingredients_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textColor="#4a4a4a"
                    android:lineSpacingMultiplier="1.6"
                    android:text="- Pasta\n- Eggs\n- Bacon\n- Cheese" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/instructions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1a1a1a" />

                <TextView
                    android:id="@+id/instructions_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textColor="#4a4a4a"
                    android:lineSpacingMultiplier="1.6"
                    android:text="1. Boil pasta\n2. Fry bacon\n3. Mix eggs with cheese\n4. Combine all ingredients\n5. Serve hot" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_recipe_button"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:text="@string/start_cooking"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#7c4dff"
        android:textColor="#ffffff"
        app:cornerRadius="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.Material3.Button" />

</androidx.constraintlayout.widget.ConstraintLayout>
